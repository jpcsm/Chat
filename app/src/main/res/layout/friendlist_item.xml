<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LL_myprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="내 프로필" />

        <View
            android:id="@+id/view5"
            style="@style/Divider"
            android:layout_width="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/IV_MyProflie"
                android:layout_width="51dp"
                android:layout_height="48dp"
                android:background="@color/colorAccent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/user3" />

            <TextView
                android:id="@+id/tv_Myname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/tv_roomsize"
                android:layout_alignStart="@+id/tv_roomsize"
                android:layout_below="@+id/tv_roomsize"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="My Name"
                android:textSize="17dp" />

        </LinearLayout>

        <View
            android:id="@+id/view4"
            style="@style/Divider"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="친구" />

        <View
            android:id="@+id/view3"
            style="@style/Divider"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_freindprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/IV_friendprofile"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:background="@color/colorAccent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/user3" />

        <TextView
            android:id="@+id/tv_friendname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/tv_roomsize"
            android:layout_alignStart="@+id/tv_roomsize"
            android:layout_below="@+id/tv_roomsize"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Friend Name"
            android:textSize="17dp" />

        <CheckBox
            android:id="@+id/Cb_addfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false" />

    </LinearLayout>


</LinearLayout>