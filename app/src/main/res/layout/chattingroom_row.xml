<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/IV_RoomImage"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_weight="0.04"
            android:background="@color/colorAccent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/user3" />



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/IV_RoomImage"
            android:layout_toRightOf="@+id/IV_RoomImage"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/IV_RoomImage"
                android:layout_toEndOf="@+id/IV_RoomImage"
                android:layout_toRightOf="@+id/IV_RoomImage"
                android:layout_weight="1.90"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_room"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_roomsize"
                    android:layout_alignStart="@+id/tv_roomsize"
                    android:layout_below="@+id/tv_roomsize"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Room_Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_userSize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_roomsize"
                    android:layout_alignStart="@+id/tv_roomsize"
                    android:layout_below="@+id/tv_roomsize"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="23"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_lastmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_roomsize"
                android:layout_alignStart="@+id/tv_roomsize"
                android:layout_below="@+id/tv_roomsize"
                android:layout_marginTop="10dp"
                android:layout_weight="0.95"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="tv_lastmsg"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.04"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_roomsize"
                android:layout_alignStart="@+id/tv_roomsize"
                android:layout_below="@+id/tv_roomsize"
                android:layout_weight="0.04"
                android:gravity="center_vertical"
                android:text="2017/09/02"
                android:textSize="15sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.04">

                <TextView
                    android:id="@+id/tv_NewMsgSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_roomsize"
                    android:layout_alignStart="@+id/tv_roomsize"
                    android:layout_below="@+id/tv_roomsize"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0.04"
                    android:gravity="center_vertical|center"
                    android:text="12"
                    android:textSize="15sp" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>